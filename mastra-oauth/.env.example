# Anthropic API Key (required for Mastra AI agent)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Mapbox OAuth Configuration
# Option 1: Use dynamic client registration (recommended)
# Leave NEXT_PUBLIC_MAPBOX_OAUTH_CLIENT_ID empty and the app will register
# a new OAuth client automatically using Mapbox's dynamic registration API

# Option 2: Use a pre-registered client ID
# If you already have an OAuth client registered, provide it here
NEXT_PUBLIC_MAPBOX_OAUTH_CLIENT_ID=

# OAuth redirect URI (should match your OAuth app configuration)
NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Mapbox access token for client-side map rendering
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
